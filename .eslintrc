{
   "extends": [
      "airbnb"
   ],
   "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
   },
   "parser": "babel-eslint",
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      }
   },
   "rules": {
      "no-console": 0,
      "react/destructuring-assignment": 0,
      "react/prop-types": 0,
      "react/no-array-index-key": 0,
      "react/jsx-filename-extension": 0,
      "prefer-destructuring": 0,
      "no-plusplus": 0,
      "no-shadow": 1,

      "space-in-parens": [
         1,
         "never"
      ],
      "no-multiple-empty-lines": [
         1,
         {
            "max": 1,
            "maxEOF": 1,
            "maxBOF": 0
         }
      ]
   }
}
